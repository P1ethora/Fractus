<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/black_p50"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"

        >

        <EditText
            android:id="@+id/model_tree_type"
            android:layout_width="88dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/white"/>


        <EditText
            android:id="@+id/model_tree_age"
            android:layout_width="88dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:layout_marginStart="1dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_toEndOf="@+id/model_tree_type"
            />


        <EditText
            android:id="@+id/model_tree_height"
            android:layout_width="87.5dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:layout_marginStart="1dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_toEndOf="@+id/model_tree_age"/>


        <EditText
            android:id="@+id/model_tree_diameter"
            android:layout_width="87.5dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:layout_marginStart="1dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_toEndOf="@+id/model_tree_height"/>








    </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>