<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.logic.AddNewDistrict">

    <EditText
        android:id="@+id/district_name"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"

        android:ems="10"
        android:gravity="center"
        android:hint="District name"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/region_name"
        android:layout_below="@+id/district_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:gravity="center"
        android:hint="Region name"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/forestry_name"
        android:layout_below="@+id/region_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:gravity="center"
        android:hint="Forestry name"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/path_to_old_description"
        android:layout_below="@+id/forestry_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_input"
        android:text="add old description"
        android:ems="10"
        android:gravity="center"
         />

    <Button
        android:id="@+id/path_to_snapshot"
        android:layout_below="@+id/path_to_old_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:gravity="center"
        android:text="Add snapshot"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/path_to_grid_gis"
        android:layout_below="@+id/path_to_snapshot"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:gravity="center"
        android:hint="Path to grid GIS"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@+id/path_to_grid_gis"
        android:layout_marginStart="34dp"
        android:layout_marginTop="55dp"
        android:text="cancel"/>


    <Button
        android:id="@+id/btn_ok"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@+id/path_to_grid_gis"
        android:layout_toEndOf="@+id/btn_cancel"
        android:layout_marginStart="34dp"
        android:layout_marginTop="55dp"
        android:text="OK"/>



</RelativeLayout>