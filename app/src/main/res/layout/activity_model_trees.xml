<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragmentsCard.undergrowth.Undergrowth">

    <RelativeLayout
        android:id="@+id/model_tree_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/black_p50"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"

        >

        <TextView
            android:id="@+id/activity_model_type"
            android:layout_width="88dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="type tree"
            android:textColor="@color/Black"

            android:background="@color/white"/>


        <TextView
            android:id="@+id/activity_model_age"
            android:layout_width="88dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="age"
            android:layout_marginStart="1dp"
            android:textColor="@color/Black"
            android:background="@color/white"
            android:layout_toEndOf="@+id/activity_model_type"
            />


        <TextView
            android:id="@+id/activity_model_height"
            android:layout_width="87.5dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:layout_marginStart="1dp"
            android:textColor="@color/Black"
            android:background="@color/white"
            android:text="height"
            android:layout_toEndOf="@+id/activity_model_age"/>


        <TextView
            android:id="@+id/activity_model_diameter"
            android:layout_width="87.5dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:layout_marginStart="1dp"
            android:textColor="@color/Black"
            android:background="@color/white"
            android:text="diameter"
            android:layout_toEndOf="@+id/activity_model_height"/>

    </RelativeLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_model_tree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/model_tree_header">

    </androidx.recyclerview.widget.RecyclerView>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_model_tree_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_add_withe_56dp"
        >

    </com.google.android.material.floatingactionbutton.FloatingActionButton>




</RelativeLayout>