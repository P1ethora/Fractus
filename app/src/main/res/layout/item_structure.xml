<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="3dp">

<androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_p50"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp">




    <EditText
        android:id="@+id/Coef"
        android:layout_width="51dp"
        android:layout_height="55dp"
        android:gravity="center"

        android:textColor="@color/black"
        android:background="@color/white"

        />


    <EditText
        android:id="@+id/TypeTree"
        android:layout_width="51dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:layout_marginStart="1dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_toEndOf="@+id/Coef"/>


    <EditText
        android:id="@+id/A"
    android:layout_width="51dp"
    android:layout_height="55dp"
        android:gravity="center"
        android:layout_marginStart="1dp"
        android:textColor="@color/black"
    android:background="@color/white"
    android:layout_toEndOf="@+id/TypeTree"/>

    <EditText
        android:id="@+id/H"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:layout_marginStart="1dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_toEndOf="@+id/A"/>

    <EditText
        android:id="@+id/D"
        android:layout_width="51dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:layout_marginStart="1dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_toEndOf="@+id/H"/>

    <EditText
        android:id="@+id/KLT"
        android:layout_width="51dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:layout_marginStart="1dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_toEndOf="@+id/D"/>


</RelativeLayout>
</RelativeLayout>


</androidx.cardview.widget.CardView>

    </LinearLayout>
